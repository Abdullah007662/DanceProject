@model CreateContactDTO

<div class="contact_section layout_padding">
    <div class="container">
        <h1 class="contact_taital">Get In Touch</h1>
        <div class="contact_section_2">
            <div class="row">
                <div class="col-sm-12">
                    <div class="contact_main layout_padding">
                        <form method="post" asp-action="CreateContact" asp-controller="Contact">
                            <div class="form-group">
                                <input type="text" class="email-bt" placeholder="Name" asp-for="NameSurname" value="@Model.NameSurname">
                            </div>
                            <div class="form-group">
                                <input type="text" class="email-bt" placeholder="Phone Number" asp-for="PhoneNumber" value="@Model.PhoneNumber">
                            </div>
                            <div class="form-group">
                                <input type="text" class="email-bt" placeholder="Email" asp-for="Email" value="@Model.Email">
                            </div>
                            <div class="form-group">
                                <textarea class="massage-bt" placeholder="Message" rows="5" id="comment" asp-for="Message">@Model.Message</textarea>
                            </div>
                            <div class="send_bt">
                                <button type="submit">Send Now</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
