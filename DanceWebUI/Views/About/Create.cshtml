@model CreateAboutDTO
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="testimonial-update-container">
    <div class="testimonial-card">
        <div class="testimonial-card-header">
            <h4>Hizmet Ekleme Sayfası</h4>
        </div>
        <div class="testimonial-card-body">
            <form method="post">

                <div class="form-group">
                    <label for="Title">Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Adı ve Soyadı girin">
                </div>

                <div class="form-group">
                    <label for="Description">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Açıklamanızı girin"></textarea>
                </div>
                <div class="form-group">
                    <label for="ImageUrl">Görsel</label>
                    <textarea asp-for="ImageUrl" class="form-control" rows="4" placeholder="Görsel girin"></textarea>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-update">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>



