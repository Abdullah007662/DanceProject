@model UpdateAboutDTO
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="testimonial-update-container">
    <div class="testimonial-card">
        <div class="testimonial-card-header">
            <h4>Hakkımızda Güncelleme</h4>
        </div>
        <div class="testimonial-card-body">
            <form method="post">
                <input type="hidden" asp-for="AboutID" />

                <div class="form-group">
                    <label for="NameSurname">Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Adı ve Soyadı girin">
                </div>


                <div class="form-group">
                    <label for="Description">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Açıklamanızı girin"></textarea>
                </div>

                <div class="form-group">
                    <label>Görsel</label>
                    <div class="image-upload-container">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="current-image">
                                <img src="@Model.ImageUrl" alt="Mevcut Görsel" class="preview-image" />
                                <p class="image-caption">Mevcut Görsel</p>
                            </div>
                        }
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-update">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>



