@model UpdateContactDTO
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="testimonial-update-container">
    <div class="testimonial-card">
        <div class="testimonial-card-header">
            <h4>İletişim Güncelleme Sayfası</h4>
        </div>
        <div class="testimonial-card-body">
            <form method="post">
                <input type="hidden" asp-for="ContactID" />

                <div class="form-group">
                    <label for="NameSurname">Adı Soyadı</label>
                    <input type="text" asp-for="NameSurname" class="form-control" placeholder="Ad Soyad Giriniz">
                </div>

                <div class="form-group">
                    <label for="PhoneNumber">Telefon Numarası</label>
                    <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Telefon Numarası Giriniz">
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="text" asp-for="Email" class="form-control" placeholder="Email Giriniz">
                </div>
                <div class="form-group">
                    <label for="Message">Açıklama</label>
                    <textarea asp-for="Message" class="form-control" rows="4" placeholder="Mesajı girin"></textarea>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-update">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


