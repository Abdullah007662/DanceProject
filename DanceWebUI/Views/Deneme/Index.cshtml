@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container mt-5">
    <h3 class="mb-4 text-center fw-bold">Kullanıcı Listesi</h3>
    <div class="table-responsive shadow-sm rounded bg-white p-3">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr class="text-center">
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Başlık</th>
                    <th>Görsel</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                }
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@count</td>
                        <td class="fw-semibold">@item.NameSurname</td>
                        <td>@item.Title</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="Görsel" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                            else
                            {
                                <span class="text-muted">Görsel yok</span>
                            }
                        </td>
                        <td>
                            <a href="/Testimonial/Update/@item.TestimonialID" class="btn btn-outline-primary btn-sm me-1">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>
                            <button class="btn btn-outline-danger btn-sm" onclick="confirmDelete(@item.TestimonialID)">
                                <i class="bi bi-trash"></i> Sil
                            </button>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
        <div class="text-end mt-3">
            <a href="/Testimonial/CreateTestimonial" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Kullanıcı Ekle
            </a>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

